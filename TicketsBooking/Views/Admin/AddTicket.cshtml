<link rel="stylesheet" href="https://cdn.linearicons.com/free/1.0.0/icon-font.min.css">
<title> Add Ticket</title>

<script>
    function SelectFlightFunction() {
        var x = document.getElementById("SelectFlight").value;
        document.getElementById("SelectedFlight").value = x;

        var x = document.getElementById("SelectType").value;
        document.getElementById("SelectedType").value = x;
    }
</script>


<header class="header">
    <div class="container">
        <a class="header_logotype active" href="/">
            W<span>G</span>
        </a>
        <nav class="header_menu">
            <div class="header_burger">
                <div class="header_burger_item"></div>
            </div>
            <ul class="header_menu-list">
                <li class="header_menu-item">
                    <a class="header_menu-item--link" href="@Url.Action("Index", "Ticket")">Tickets</a>
                </li>
                <li class="header_menu-item">
                    <a class="header_menu-item--link" href="/Admin/Flights">Flights</a>
                </li>


                <li class="header_menu-item">
                    <a class="header_menu-item--link" href=""> @User.Identity.Name </a>
                </li>

            </ul>
        </nav>
        <div class="header_buttons">
            <a class="header_buttons-basket" href="/Cart/Index">
                <img src="~/img/icon/basket.svg" alt="">
            </a>
            <a class="header_buttons-login" href="/Account/LogOff">
                <span>Logout</span>
            </a>
        </div>
    </div>
</header>

<div class="admin-edit-ticket">

    <form method="post" action="/Admin/AddTicket">
        <p>
            <select id="SelectFlight">
                @foreach (var item in Model.Flights)
                {
                    <option value="@item.Id">@item.LocationFrom - @item.LocationTo ( @item.FlightDepartmentDate )</option>
                }
            </select>

            <input id="SelectedFlight"
                   value=""
                   name="FlightID"
                   class="tr-input"
                   readonly />
        </p>

        <p>
            <select id="SelectType">
                @foreach (var item in Model.Types)
                {
                    <option value="@item.Id">@item.TypeName</option>
                }
            </select>

            <input id="SelectedType"
                   value=""
                   name="TypeID"
                   class="tr-input"
                   readonly />
        </p>

        <p>Price: <input value="" name="Price" /></p>

        <p>Amount: <input value="" name="Amount" /></p>

        <div class="buttons">
            <button onclick="SelectFlightFunction()">Save Ticket</button>

        </div>
    </form>

    <div class="buttons">
        <button onclick="window.location.href = '@Url.Action("GetAllTickets", "Admin")'">Cancel</button>

    </div>
</div>

