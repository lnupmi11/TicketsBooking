@model IEnumerable<TicketsBooking.Models.FlightViewModel>

<link rel="stylesheet" href="~/css/main.css">
<script src="~/js/main.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="https://cdn.linearicons.com/free/1.0.0/icon-font.min.css">
<title>Flights</title>


<header class="header">
    <div class="container">
        <a class="header_logotype active" href="/">
            W<span>G</span>
        </a>
        <nav class="header_menu">
            <div class="header_burger">
                <div class="header_burger_item"></div>
            </div>
            <ul class="header_menu-list">
                <li class="header_menu-item">
                    <a class="header_menu-item--link" href="@Url.Action("Index", "Ticket")">Tickets</a>
                </li>
                <li class="header_menu-item">
                    <a class="header_menu-item--link" href="/Admin/Flights">Flights</a>
                </li>
                <li class="header_menu-item">
                    <a class="header_menu-item--link" href="#">Users</a>
                </li>
                <li class="header_menu-item">
                    <a class="header_menu-item--link" href="">Add Ticket</a>
                </li>

                <li class="header_menu-item">
                    <a class="header_menu-item--link" href=""> @User.Identity.Name </a>
                </li>

            </ul>
        </nav>
        <div class="header_buttons">
            <a class="header_buttons-basket" href="/Cart/Index">
                <img src="~/img/icon/basket.svg" alt="">
            </a>
            <a class="header_buttons-login" href="/Account/LogOff">
                <span>Logout</span>
            </a>
        </div>
    </div>
</header>


<div class="admin-tickets-page">
    <h1>All tickets that are available for users:</h1>
    @if (Model != null)
    {
        @foreach (var item in Model)
        {
    <div class="flight-item d-flex justify-content-between  mb-3">
        <div class="p-2 flight-from">
            <h2>From : @item.cityFrom</h2>
            <p>@item.dateTimeDeparture</p>
        </div>
        <div class="p-2"><i class="fa fa-plane" style="font-size:36px"></i></div>
        <div class="p-2 flight-to">
            <h2>To: @item.cityTo</h2>
            <p>@item.dateTimeArriving</p>
        </div>
        <div class="p-2 btn-group-vertical">
            <button type="button" class="btn btn-primary">Edit</button>
            <button type="button" class="btn btn-danger">Delete</button>
        </div>
    </div>
            
            
        
        }
    }


    @if (Model == null)
    {
        <h3 style="text-align:center;">Sorry, but there are no tickets for the given parameters :( </h3>
    }

</div>

