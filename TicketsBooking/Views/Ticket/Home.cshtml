@{
    ViewData["Title"] = "Home";
}
<link rel="stylesheet" href="css/main.css">
<script src="~/js/main.min.js"></script>
<title>Home</title>

<header class="header">
    <div class="container">
        <a class="header_logotype active" href="#">
            WG
            @* <img class="header_logotype_img" src="" alt=""> *@
            @* <img class="header_logotype_img-mobile" src="" alt=""> *@
        </a>
        <nav class="header_menu">
            <div class="header_burger">
                <div class="header_burger_item"></div>
            </div>
            <ul class="header_menu-list">
                <li class="header_menu-item">
                    <a class="header_menu-item--link" href="#">Tickets</a>
                </li>
                <li class="header_menu-item">
                    <a class="header_menu-item--link" href="#">Specials</a>
                </li>
                <li class="header_menu-item">
                    <a class="header_menu-item--link" href="#">Companies</a>
                </li>
                <li class="header_menu-item">
                    <a class="header_menu-item--link" href="#">About</a>
                </li>
            </ul>
        </nav>
        <div class="header_buttons">
            <a class="header_buttons-login" href="#">
                <img src="~/img/icon/user-default.svg" alt="" class="header_buttons-login--avatar">
                <span>login</span>
            </a>
        </div>
    </div>
</header>
<div class="home-page">
    <div class="container main_block">
        <h1 class="main_block-header1">WeGo</h1>
        <h2 class="main_block-header2">Unleash the traveler inside you</h2>

        <form class="form-wrapper">
            <div class="form-block">
                <div class="form-group">
                    <input type="text"
                           class="form-group-input"
                           name="from"
                           placeholder="From">
                </div>
                <button class="form-group-change">
                    <img src="img/icon/repeat.svg"/>
                </button>
                <div class="form-group">
                    <input type="text"
                           class="form-group-input"
                           name="to"
                           placeholder="To">
                </div>

                <div class="form-group">
                    <input type="date"
                           class="form-group-input"
                           name="date"
                           placeholder="Date">
                </div>

                <div class="form-group validation ">
                    <input type="number"
                           class="form-group-input"
                           name="count"
                           placeholder="Tickets count">
                </div>
                <button class="form-group-button">Search now</button>
            </div>

        </form>

    </div>
</div>


<footer class="footer">
    <div class="container footer-wrapper">
        <div class=" main_block-header1 footer-logotype">
            WeGo
        </div>
        <div class="footer-menu">
            <div class="footer-title">Links</div>
            <nav class="footer-menu-nav">
                <ul>
                    <li>
                        <a href="#">Tickets</a>
                    </li>
                    <li>
                        <a href="#">Special</a>
                    </li>
                    <li>
                        <a href="#">Companies</a>
                    </li>
                    <li>
                        <a href="#">About</a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="footer-contact">
            <div class="footer-title">Contact</div>
            <div class="footer-contact-wrapper">
                <a class="footer-contact-col-line" target="_blank" href="tel:+380931234567">+380931234567</a>
                <a class="footer-contact-col-line" target="_blank" href="test@gmail.com">test@gmail.com</a>

            </div>
        </div>
        <div class="footer-socials">
            <div class="footer-title">Socials</div>
            <div class="footer-socials-wrapper">
                <a href="#" title="Facebook"
                   class="footer-socials-item"
                   target="_blank">
                    @* <img src="" class="footer_socials-item--image" alt="Facebook"> *@
                </a>
                <a href="#" title="Twitter" class="footer-socials-item" target="_blank">
                    @* <img src="" class="footer_socials-item--image" alt="Twitter"> *@
                </a>
                <a href="#" title="Instagram" class="footer-socials-item" target="_blank">
                    @* <img src="" class="footer_socials-item--image" alt="Twitter"> *@
                </a>
            </div>
        </div>
    </div>
</footer>