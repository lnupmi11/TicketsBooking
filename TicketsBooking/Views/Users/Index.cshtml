@{
    ViewData["Title"] = "Edit";
}

@model TicketsBooking.Models.EditUserViewModel

<link rel="stylesheet" href="~/css/main.css">
@*<script src="~/js/main.min.js"></script>*@
<title>Sign up</title>
<header class="header">
    <div class="container">
        <a class="header_logotype active" href="/">
            W<span>G</span>
        </a>
        <nav class="header_menu">
            <div class="header_burger">
                <div class="header_burger_item"></div>
            </div>
            <ul class="header_menu-list">
                <li class="header_menu-item">
                    <a class="header_menu-item--link" href="@Url.Action("Index", "Ticket")">Tickets</a>
                </li>
                <li class="header_menu-item">
                    <a class="header_menu-item--link" href="#">Specials</a>
                </li>
                <li class="header_menu-item">
                    <a class="header_menu-item--link" href="#">Companies</a>
                </li>
                <li class="header_menu-item">
                    <a class="header_menu-item--link" href="/Home/About">About</a>
                </li>
            </ul>
        </nav>
        @if (User.Identity.IsAuthenticated)
        {
            <div class="header_buttons">
                <a class="header_buttons-basket" href="#">
                    <img src="~/img/icon/basket.svg" alt="">
                </a>
                <a class="header_buttons-login" href="/Account/LogOff">
                    <span>Logout</span>
                </a>
            </div>
        }

        @if (!User.Identity.IsAuthenticated)
        {
            <div class="header_buttons">
                <a class="header_buttons-basket" href="/Cart/Index">
                    <img src="~/img/icon/basket.svg" alt="">
                </a>
                <a class="header_buttons-login" href="/Account/Login">
                    <span>login</span>
                </a>
            </div>
        }
    </div>
</header>

<div class="login-page container">
    <div class="form-wrapper ">
        <div class="form-wrapper_title-block">
            <span class="form-wrapper_title-text">Edit</span>
        </div>
        <form class="form-block" id="signup-form" method="post" asp-action="Index" asp-controller="Users">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email"
                       type="email"
                       class="form-group-input"
                       name="Email"
                       value="@Model.Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Name</label>
                <input asp-for="FirstName"
                       type="text"
                       class="form-group-input"
                       name="FirstName"
                       placeholder="Name"
                       value="@Model.FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Surname</label>
                <input asp-for="LastName"
                       type="text"
                       class="form-group-input"
                       name="LastName"
                       placeholder="Surname"
                       value="@Model.LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <input type="submit" class="form-group-button" value="Edit →" />
        </form>
    </div>
</div>

<footer class="footer">
    <div class="container footer-wrapper">
        <div class=" main_block-header1 footer-logotype">
            WeGo
        </div>
        <div class="footer-menu">
            <div class="footer-title">Links</div>
            <nav class="footer-menu-nav">
                <ul>
                    <li>
                        <a href="#">Tickets</a>
                    </li>
                    <li>
                        <a href="#">Special</a>
                    </li>
                    <li>
                        <a href="#">Companies</a>
                    </li>
                    <li>
                        <a href="#">About</a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="footer-contact">
            <div class="footer-title">Contact</div>
            <div class="footer-contact-wrapper">
                <a class="footer-contact-col-line" target="_blank" href="tel:+380931234567">+380931234567</a>
                <a class="footer-contact-col-line" target="_blank" href="test@gmail.com">test@gmail.com</a>

            </div>
        </div>
        <div class="footer-socials">
            <div class="footer-title">Socials</div>
            <div class="footer-socials-wrapper">
                <a href="#" title="Facebook"
                   class="footer-socials-item"
                   target="_blank">
                    @* <img src="" class="footer_socials-item--image" alt="Facebook"> *@
                </a>
                <a href="#" title="Twitter" class="footer-socials-item" target="_blank">
                    @* <img src="" class="footer_socials-item--image" alt="Twitter"> *@
                </a>
                <a href="#" title="Instagram" class="footer-socials-item" target="_blank">
                    @* <img src="" class="footer_socials-item--image" alt="Twitter"> *@
                </a>
