                    </li>
                    <li class="header_menu-item">
                        <a class="header_menu-item--link" href="#">Specials</a>
                    </li>
                    <li class="header_menu-item">
                        <a class="header_menu-item--link" href="#">Companies</a>
                    </li>
                    <li class="header_menu-item">
                        <a class="header_menu-item--link" href="/Home/About">About</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="header_menu-item">
                            <a class="header_menu-item--link" href="/Users/Index"> @User.Identity.Name </a>
                        </li>
                    }
                </ul>
            </nav>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="header_buttons">
                    <a class="header_buttons-basket" href="/Cart/Index">
                        <img src="~/img/icon/basket.svg" alt="">
                    </a>
                    <a class="header_buttons-login" href="/Account/LogOff">
                        <span>Logout</span>
                    </a>
                </div>
            }

            @if (!User.Identity.IsAuthenticated)
            {
                <div class="header_buttons">
                    <a class="header_buttons-login" href="/Account/Login">
                        <span>login</span>
                    </a>
                </div>
            }
        </div>
    </header>
}

<div class="login-page container">
    <div class="form-wrapper ">
        <div class="form-wrapper_title-block">
            <span class="form-wrapper_title-text">Edit</span>
        </div>
        <form class="form-block" id="signup-form" method="post" asp-action="ChangePassword" asp-controller="Users">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email"
                       type="email"
                       readonly
                       class="form-group-input"
                       name="Email"
                       value="@Model.Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Password">Password</label>
                <input type="password"
                       class="form-group-input"
                       name="Password"
                       asp-for="Password"
                       value="">
                <span asp-validation-for="Password"></span>
            </div>
            <input type="submit" class="form-group-button" value="Change Password →" />
        </form>
    </div>
</div>

